package org.luwrain.windows.speech;

public class SAPIImplTest
{
	SAPIImpl sapi;
	public static void main(String[] args) throws Exception
	{
		System.out.print("search, cnt: ");
		System.out.println(SAPIImpl.searchVoiceByAttributes("Name=Irina+Alan"));
//		System.out.println(SAPIImpl.searchVoiceByAttributes(null));
		System.out.print("get first: ");
		System.out.println(SAPIImpl.getNextVoiceIdFromList());
		System.out.println("select");
		SAPIImpl.selectCurrentVoice();
		System.out.println("speak 1");
        SAPIImpl.speak("Это голосовой движок Ирины и Алана, it's right!");
        System.out.println("sleep 2 sec");
        Thread.sleep(2000);

		System.out.print("search, cnt: ");
		System.out.println(SAPIImpl.searchVoiceByAttributes("Name=Elena"));
		System.out.print("get first: ");
		System.out.println(SAPIImpl.getNextVoiceIdFromList());
		System.out.println("select");
		SAPIImpl.selectCurrentVoice();

		System.out.println("speak 2");
        SAPIImpl.speak("А это Елена, и нам есть о чем поговорить, долго и нудно");
        System.out.println("sleep 2 sec");
        Thread.sleep(2000);        
		
		System.out.print("search, cnt: ");
		System.out.println(SAPIImpl.searchVoiceByAttributes("Name=Aleksandr"));
		System.out.print("get first: ");
		System.out.println(SAPIImpl.getNextVoiceIdFromList());
		System.out.println("select");
		SAPIImpl.selectCurrentVoice();

        System.out.println("speak 2");
        SAPIImpl.speak("Прервемся",SAPIImpl.SPF_PURGEBEFORESPEAK);
        System.out.println("sleep 1 sec");
        Thread.sleep(1000);        

        System.out.println("end");
    }
}

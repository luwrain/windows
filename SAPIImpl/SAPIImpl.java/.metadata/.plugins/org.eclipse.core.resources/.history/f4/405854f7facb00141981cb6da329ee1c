package org.luwrain.windows.speech;

public class SAPIImplTest
{
	SAPIImpl sapi;
	public static void main(String[] args) throws Exception
	{
		String id;
		System.out.println("all voice tokens:");
		SAPIImpl.searchVoiceByAttributes(null);
		while((id=SAPIImpl.getNextVoiceIdFromList())!=null) System.out.println(id);
		
		System.out.print("Ищем Irina+Alan, количество: ");
		System.out.println(SAPIImpl.searchVoiceByAttributes("Name=Irina+Alan"));
//		System.out.println(SAPIImpl.searchVoiceByAttributes(null));
		System.out.print("get first voice token: ");
		System.out.println(SAPIImpl.getNextVoiceIdFromList());
		System.out.println("select voice");
		SAPIImpl.selectCurrentVoice();
		System.out.println("speak 1 - Асинхронно, дольше чем следующая пауза");
        SAPIImpl.speak("Это голосовой движок Ирины и Алана, it's right!");
        System.out.println("sleep 2 sec");
        Thread.sleep(2000);

		System.out.print("Ищем Elena, количество: ");
		System.out.println(SAPIImpl.searchVoiceByAttributes("Name=Elena"));
		System.out.print("get first voice token: ");
		System.out.println(SAPIImpl.getNextVoiceIdFromList());
		System.out.println("select voice");
		SAPIImpl.selectCurrentVoice();

		System.out.println("speak 2 - Асинхронно, дольше чем следующая пауза");
        SAPIImpl.speak("А это Елена, и нам есть о чем поговорить, долго и нудно");
        System.out.println("sleep 4 sec");
        Thread.sleep(4000);        
		
		System.out.println("выбираем по идентификатору Aleksandr");
		SAPIImpl.selectVoiceById("HKEY_LOCAL_MACHINE\\SOFTWARE\\Microsoft\\Speech\\Voices\\TokenEnums\\RHVoice\\Aleksandr");

        System.out.println("speak 3. Не асинхронно, с очисткой очереди и остановкой предыдущих текстов");
        SAPIImpl.speak("Прервемся",SAPIImpl.SPF_PURGEBEFORESPEAK);
        System.out.println("sleep 1 sec");
        Thread.sleep(1000);        

        System.out.println("end");
    }
}
